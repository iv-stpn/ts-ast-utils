{
	"name": "ts-ast-utils",
	"version": "0.0.3",
	"description": "TypeScript AST parsing utilities for extracting and analyzing TypeScript code",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit --pretty",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"knip": "bunx knip",
		"ts-prune": "bunx ts-prune --project tsconfig.json",
		"changeset": "changeset",
		"changeset:version": "changeset version",
		"changeset:publish": "changeset publish",
		"release": "bun run build && bun run changeset:publish",
		"prepublishOnly": "bun run build"
	},
	"keywords": [
		"typescript",
		"ast",
		"parsing",
		"utilities",
		"code-analysis"
	],
	"homepage": "https://github.com/iv-stpn/ts-ast-utils#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/iv-stpn/ts-ast-utils.git"
	},
	"bugs": {
		"url": "https://github.com/iv-stpn/ts-ast-utils/issues"
	},
	"license": "MIT",
	"author": "Ivan Stepanian <iv.stpn@gmail.com>",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@changesets/changelog-github": "^0.5",
		"@changesets/cli": "^2",
		"@types/bun": "latest",
		"tsup": "^8",
		"typescript": "^5"
	},
	"publishConfig": {
		"access": "public"
	}
}
